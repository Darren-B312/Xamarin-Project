<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IAD_Project"
             x:Class="IAD_Project.MainPage">

    <StackLayout Style="{StaticResource stkOuter}">

        <StackLayout Style="{StaticResource stkWarning}">
            
        </StackLayout>

        <StackLayout Style="{StaticResource stkTitle}">
            <Label Text="Grade Calculator!" />
        </StackLayout>

        <StackLayout Style="{StaticResource stkContent}">
            <Button x:Name="btnNewCourse" Clicked="btnNewCourse_Clicked" Text="New Course" IsVisible="False" />
            <Button x:Name="btnCourseOverviewPage" Clicked="btnCourseOverviewPage_Clicked" Text="My Course" IsVisible="False" />
        </StackLayout>

        <StackLayout Style="{StaticResource stkBack}">
            <Button x:Name="btnDeleteCourse" Clicked="btnDeleteCourse_Clicked" Text="Delete Course" IsVisible="False" />
        </StackLayout>

        


    </StackLayout>

</ContentPage>
