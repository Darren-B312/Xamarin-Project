<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IAD_Project.Views.NewCoursePage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Style="{StaticResource stkOuter}">

            <StackLayout Style="{StaticResource stkWarning}">
            </StackLayout>

            <StackLayout Style="{StaticResource stkTitle}">
                <Label Text="Enter Course Details" />
            </StackLayout>

            <StackLayout Style="{StaticResource stkContent}">
                <Entry x:Name="entCourseName" Placeholder="Course Name" />
                <Entry x:Name="entCoureNumOfYears" Placeholder="Course Length" Keyboard="Numeric"/>
                <Button x:Name="btnCreateCourse" Clicked="btnCreateCourse_Clicked" Text="Create Course" />
            </StackLayout>

            <StackLayout Style="{StaticResource stkBack}">
            </StackLayout>

        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>