<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IAD_Project.Views.NewModulePage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Style="{StaticResource stkOuter}">

            <StackLayout Style="{StaticResource stkWarning}">

            </StackLayout>

            <StackLayout Style="{StaticResource stkTitle}">
                <Label Text="Enter Module Details"/>
            </StackLayout>

            <StackLayout Style="{StaticResource stkContent} ">
                <Entry x:Name="entModuleName" Placeholder="Name" />
                <Entry x:Name="entModuleCredits" Placeholder="Credits" Keyboard="Numeric"/>
                <Button x:Name="btnAddNewModule" Clicked="btnAddNewModule_Clicked" Text="+ Module" BackgroundColor="#5c7e10" />
            </StackLayout>

            <StackLayout Style="{StaticResource stkBack}">
                <Button x:Name="btnBACK" Clicked="btnBACK_Clicked" Text="← Year Overview" />
            </StackLayout>

        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>