<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IAD_Project.Views.YearOverviewPage">
    <ContentPage.Content>

        <StackLayout Style="{StaticResource stkOuter}">

            <StackLayout Style="{StaticResource stkWarning}">

            </StackLayout>

            <StackLayout Style="{StaticResource stkTitle}">
                <Label x:Name="lblYearOverviewTitle" Text="" HorizontalTextAlignment="Center"/>
                <Label x:Name="lblYearAverage" Text="" HorizontalTextAlignment="Center"/>
                <Button x:Name="btnAddModule" Clicked="btnAddModule_Clicked" Text="+" />
            </StackLayout>

            <StackLayout Style="{StaticResource stkContent} " x:Name="layout">

            </StackLayout>

            <StackLayout Style="{StaticResource stkBack}">
                <Button x:Name="btnBACK" Clicked="btnBACK_Clicked" Text="← Course Overview" />
            </StackLayout>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>