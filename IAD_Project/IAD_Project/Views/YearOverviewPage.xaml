<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IAD_Project.Views.YearOverviewPage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Style="{StaticResource stkOuter}">

            <StackLayout Style="{StaticResource stkWarning}">

            </StackLayout>

            <StackLayout Style="{StaticResource stkTitle}" x:Name="layout">
                <Label x:Name="lblYearOverviewTitle" Text="" HorizontalTextAlignment="Center"/>
                <Label x:Name="lblYearOverviewYear" Text="" HorizontalTextAlignment="Center"/>
                <Label x:Name="lblYearAverage" Text="" HorizontalTextAlignment="Center"/>
            </StackLayout>

            <StackLayout Style="{StaticResource stkContent} " >
                <Button x:Name="btnAddModule" Clicked="btnAddModule_Clicked" Text="+ Module" BackgroundColor="#5c7e10"/>
            </StackLayout>

            <StackLayout Style="{StaticResource stkBack}">
                <Button x:Name="btnBACK" Clicked="btnBACK_Clicked" Text="← Course Overview" />
            </StackLayout>

        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>