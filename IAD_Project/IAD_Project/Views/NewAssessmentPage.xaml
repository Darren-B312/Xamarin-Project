<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IAD_Project.Views.NewAssessmentPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            
            <Label Text="Enter Assessment Details"/>
            <Entry x:Name="entAssessmentName" Placeholder="Name" />
            <Entry x:Name="entAssessmentWeight" Placeholder="Weight (%)" Keyboard="Numeric"/>
            <Button x:Name="btnAddNewAssessment" Clicked="btnAddNewAssessment_Clicked" Text="Add" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>