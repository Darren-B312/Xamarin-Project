<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IAD_Project.Views.EditCoursePage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Style="{StaticResource stkOuter}">

            <StackLayout Style="{StaticResource stkWarning}">
            </StackLayout>

            <StackLayout Style="{StaticResource stkTitle}">
                <Label x:Name="lblTitle" Text="" />
            </StackLayout>

            <StackLayout Style="{StaticResource stkContent}" >
                <Entry x:Name="entEditName" Placeholder="" IsVisible="False"/>
                <Button x:Name="btnEditName" Clicked="btnEditName_Clicked" Text="Edit Name" />

                <Button x:Name="btnDeleteCourse" Clicked="btnDeleteCourse_Clicked" Text="Delete Course" BackgroundColor="#731b22"/>
            </StackLayout>

            <StackLayout Style="{StaticResource stkBack}">
                <Button x:Name="btnBACK" Clicked="btnBACK_Clicked" Text="← Course Overview" />
            </StackLayout>

        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>